<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_esg_social_tree" model="ir.ui.view">
        <field name="name">esg.social.tree</field>
        <field name="model">esg.social</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference"/>
                <field name="name"/>
                <field name="metric_type"/>
                <field name="value"/>
                <field name="unit"/>
                <field name="date"/>
                <field name="reporting_period"/>
                <field name="verification_status"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_esg_social_form" model="ir.ui.view">
        <field name="name">esg.social.form</field>
        <field name="model">esg.social</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="General Information">
                            <field name="reference" readonly="1"/>
                            <field name="name"/>
                            <field name="metric_type"/>
                            <field name="value"/>
                            <field name="unit"/>
                            <field name="date"/>
                            <field name="reporting_period"/>
                            <field name="company_id" options="{'no_create': True}"/>
                        </group>
                        <group string="Details">
                            <field name="employee_group"/>
                            <field name="community_investment"/>
                            <field name="verification_status"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Remarks">
                            <field name="remarks" widget="text"/>
                        </page>
                        <page string="Related Metrics">
                            <group>
                                   <field name="related_environmental_ids" widget="many2many_tags"/>
                            <field name="related_governance_ids" widget="many2many_tags"/>

                            </group>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_esg_social_search" model="ir.ui.view">
        <field name="name">esg.social.search</field>
        <field name="model">esg.social</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="reference"/>
                <field name="metric_type"/>
                <field name="unit"/>
                <field name="reporting_period"/>
                <field name="verification_status"/>
                <filter string="Draft" name="draft" domain="[('verification_status', '=', 'draft')]"/>
                <filter string="Verified" name="verified" domain="[('verification_status', '=', 'verified')]"/>
                <filter string="Rejected" name="rejected" domain="[('verification_status', '=', 'rejected')]"/>
                <group expand="0" string="Group By">
                    <filter string="Metric Type" name="group_by_metric_type" context="{'group_by': 'metric_type'}"/>
                    <filter string="Reporting Period" name="group_by_period" context="{'group_by': 'reporting_period'}"/>
                    <filter string="Verification Status" name="group_by_status" context="{'group_by': 'verification_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_esg_social" model="ir.actions.act_window">
        <field name="name">Social Metrics</field>
        <field name="res_model">esg.social</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_esg_social_search"/>
    </record>
    <menuitem id="esg_social_root" name="Social" parent="esg_root" />
    <menuitem id="esg_social" name="Social Metrics" parent="esg_social_root" action="action_esg_social" />
</odoo>
