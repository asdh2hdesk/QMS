<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_esg_governance_tree" model="ir.ui.view">
        <field name="name">esg.governance.tree</field>
        <field name="model">esg.governance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference"/>
                <field name="name"/>
                <field name="area"/>
                <field name="status"/>
                <field name="responsible"/>
                <field name="date"/>
                <field name="reporting_period"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_esg_governance_form" model="ir.ui.view">
        <field name="name">esg.governance.form</field>
        <field name="model">esg.governance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="General Information">
                            <field name="reference" readonly="1"/>
                            <field name="name"/>
                            <field name="area"/>
                            <field name="status"/>
                            <field name="responsible" options="{'no_create': True}"/>
                            <field name="date"/>
                            <field name="reporting_period"/>
                            <field name="company_id" options="{'no_create': True}"/>
                        </group>
                        <group string="Details">
                            <field name="risk_level"/>
                            <field name="compliance_score"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Comments">
                            <field name="comments" widget="text"/>
                        </page>
                        <page string="Related Metrics">
                            <group>
                                <field name="related_environmental_ids" widget="many2many_tags"/>
                            <field name="related_social_ids" widget="many2many_tags"/>
                            </group>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_esg_governance_search" model="ir.ui.view">
        <field name="name">esg.governance.search</field>
        <field name="model">esg.governance</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="reference"/>
                <field name="area"/>
                <field name="status"/>
                <field name="responsible"/>
                <field name="reporting_period"/>
                <filter string="Compliant" name="compliant" domain="[('status', '=', 'compliant')]"/>
                <filter string="Non-Compliant" name="non_compliant" domain="[('status', '=', 'non_compliant')]"/>
                <filter string="Pending" name="pending" domain="[('status', '=', 'pending')]"/>
                <group expand="0" string="Group By">
                    <filter string="Area" name="group_by_area" context="{'group_by': 'area'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="Responsible" name="group_by_responsible" context="{'group_by': 'responsible'}"/>
                    <filter string="Reporting Period" name="group_by_period" context="{'group_by': 'reporting_period'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_esg_governance" model="ir.actions.act_window">
        <field name="name">Governance Metrics</field>
        <field name="res_model">esg.governance</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_esg_governance_search"/>
    </record>

<menuitem id="esg_governance_root" name="Governance" parent="esg_root" />
<menuitem id="esg_governance" name="Governance Metrics" parent="esg_governance_root" action="action_esg_governance" />
</odoo>
