<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_esg_environmental_tree" model="ir.ui.view">
        <field name="name">esg.environmental.tree</field>
        <field name="model">esg.environmental</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference"/>
                <field name="name"/>
                <field name="category"/>
                <field name="value"/>
                <field name="unit"/>
                <field name="date"/>
                <field name="reporting_period"/>
                <field name="verification_status"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_esg_environmental_form" model="ir.ui.view">
        <field name="name">esg.environmental.form</field>
        <field name="model">esg.environmental</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="General Information">
                            <field name="reference" readonly="1"/>
                            <field name="name"/>
                            <field name="category"/>
                            <field name="value"/>
                            <field name="unit"/>
                            <field name="date"/>
                            <field name="reporting_period"/>
                            <field name="company_id" options="{'no_create': True}"/>
                        </group>
                        <group string="Targets and Verification">
                            <field name="reduction_target"/>
                            <field name="carbon_offset"/>
                            <field name="verification_status"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" widget="text"/>
                        </page>
                        <page string="Related Metrics">
                            <group>
                                <field name="related_social_ids" widget="many2many_tags"/>
                            <field name="related_governance_ids" widget="many2many_tags"/>
                            </group>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_esg_environmental_search" model="ir.ui.view">
        <field name="name">esg.environmental.search</field>
        <field name="model">esg.environmental</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="reference"/>
                <field name="category"/>
                <field name="unit"/>
                <field name="reporting_period"/>
                <field name="verification_status"/>
                <filter string="Draft" name="draft" domain="[('verification_status', '=', 'draft')]"/>
                <filter string="Verified" name="verified" domain="[('verification_status', '=', 'verified')]"/>
                <filter string="Rejected" name="rejected" domain="[('verification_status', '=', 'rejected')]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_by_category" context="{'group_by': 'category'}"/>
                    <filter string="Reporting Period" name="group_by_period" context="{'group_by': 'reporting_period'}"/>
                    <filter string="Verification Status" name="group_by_status" context="{'group_by': 'verification_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_esg_environmental" model="ir.actions.act_window">
        <field name="name">Environmental Metrics</field>
        <field name="res_model">esg.environmental</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_esg_environmental_search"/>
    </record>
     <menuitem id="esg_root" name="ESG"/>
    <menuitem id="esg_environmental_root" name="Environmental" parent="esg_root"/>
    <menuitem id="esg_environmental" name="Environmental Metrics" parent="esg_environmental_root" action="action_esg_environmental"/>
</odoo>
