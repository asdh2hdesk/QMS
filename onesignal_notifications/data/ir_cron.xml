<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron job for cleaning old notifications (optional) -->
    <record id="ir_cron_clean_old_notifications" model="ir.cron">
        <field name="name">Clean Old OneSignal Notifications</field>
        <field name="model_id" ref="model_onesignal_notification"/>
        <field name="state">code</field>
        <field name="code">env['onesignal.notification'].clean_old_notifications(30)</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>
</odoo>