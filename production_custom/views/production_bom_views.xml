<odoo>
    <record id="view_production_bom_tree" model="ir.ui.view">
        <field name="model">production.bom</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_id"/>
            </tree>
        </field>
    </record>

    <record id="view_production_bom_form" model="ir.ui.view">
        <field name="model">production.bom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                    </group>
                    <field name="bom_line_ids">
                        <tree editable="bottom">
                            <field name="component_id"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_production_bom" model="ir.actions.act_window">
        <field name="name">Bill of Materials</field>
        <field name="res_model">production.bom</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
