<odoo>
    <record id="view_production_order_tree" model="ir.ui.view">
        <field name="model">production.order</field>
        <field name="arch" type="xml">
            <tree editable="bottom" string="Production Orders">
                <field name="name"/>
                <field name="product_id"/>
                <field name="qty_produce"/>
                <field name="planned_qty"/>
                <field name="actual_qty"/>
                <field name="rejected_qty"/>
                <field name="planned_date"/>
                <field name="shift"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_production_order_form" model="ir.ui.view">
        <field name="model">production.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
                    <button name="action_done" type="object" string="Mark as Done" states="confirmed"
                            class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft,confirmed"
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="planned_date"/>
                            <field name="qty_produce"/>
                            <field name="shift"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="planned_qty"/>
                            <field name="actual_qty"/>
                            <field name="rejected_qty"/>
                        </group>
                    </group>
<!--                    <notebook>-->
<!--                        <page string="Components">-->
<!--                            <field name="order_line_ids">-->
<!--                                <tree editable="bottom">-->
<!--                                    <field name="raw_material_id"/>-->
<!--                                    <field name="quantity_required"/>-->
<!--                                    <field name="quantity_consumed"/>-->
<!--                                </tree>-->
<!--                            </field>-->
<!--                        </page>-->
<!--                        <page string="Lots">-->
<!--                            <field name="lot_ids">-->
<!--                                <tree editable="bottom">-->
<!--                                    <field name="name"/>-->
<!--                                    <field name="product_id"/>-->
<!--                                </tree>-->
<!--                            </field>-->
<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_production_order_kanban" model="ir.ui.view">
        <field name="model">production.order</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="product_id"/>
                <field name="qty_produce"/>
                <field name="planned_qty"/>
                <field name="actual_qty"/>
                <field name="rejected_qty"/>
                <field name="state"/>
                <field name="shift"/>
            </kanban>
        </field>
    </record>

    <record id="view_production_order_graph" model="ir.ui.view">
        <field name="model">production.order</field>
        <field name="arch" type="xml">
            <graph>
                <field name="qty_produce" type="measure"/>
                <field name="planned_qty" type="measure"/>
                <field name="actual_qty" type="measure"/>
                <field name="rejected_qty" type="measure"/>
                <field name="state" type="row"/>
                <field name="shift" type="col"/>
            </graph>
        </field>
    </record>

    <record id="action_production_order" model="ir.actions.act_window">
        <field name="name">Production Orders</field>
        <field name="res_model">production.order</field>
        <field name="view_mode">tree,kanban,graph</field>
    </record>
</odoo>
